---
import { slugify } from '../utils/slugify';

interface Item {
  name: string;
  count: number;
}

interface PostCounts {
  blog: number;
  scrap: number;
}

interface Props {
  categories: Item[];
  tags: Item[];
  postCounts?: PostCounts;
  title?: string;
  baseUrl?: string;
}

const { categories, tags, postCounts, title = 'メニュー', baseUrl = '' } = Astro.props;
---
<aside class="explore-panel card">
  <header>
    <h2 class="visually-hidden">{title}</h2>
  </header>
  {postCounts && (
    <section>
      <h3>投稿タイプ</h3>
      <ul class="post-types">
        <li>
          <a href={`${baseUrl}/types/blog/1/`}>
            <svg class="post-type-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span class="post-type-text">
              <span class="post-type-label">ブログ記事<span>{postCounts.blog}</span></span>
              <small>しっかり書いた記事</small>
            </span>
          </a>
        </li>
        <li>
          <a href={`${baseUrl}/types/scrap/1/`}>
            <svg class="post-type-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 20h9"></path>
              <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
            </svg>
            <span class="post-type-text">
              <span class="post-type-label">作業ログ<span>{postCounts.scrap}</span></span>
              <small>作業中のメモや断片的な記録</small>
            </span>
          </a>
        </li>
      </ul>
    </section>
  )}
  <section>
    <h3>カテゴリ</h3>
    <ul class="categories">
      {categories.map((category) => (
        <li>
          <a href={`${baseUrl}/categories/${slugify(category.name)}/1/`}>
            {category.name}<span>{category.count}</span>
          </a>
        </li>
      ))}
    </ul>
  </section>
  <section>
    <h3>タグ</h3>
    <ul class="tags">
      {tags.map((tag) => (
        <li>
          <a href={`${baseUrl}/tags/${slugify(tag.name)}/1/`}>#{tag.name}</a>
        </li>
      ))}
    </ul>
  </section>
</aside>

<style>
.explore-panel {
  padding: 24px;
  background: var(--bg-sidebar);
  position: sticky;
  top: 96px;
  max-height: calc(100vh - 120px);
  overflow-y: auto;
}

.explore-panel section + section {
  margin-top: 24px;
}

.explore-panel h3 {
  margin: 0 0 12px;
  font-size: 0.95rem;
  color: var(--text-primary);
}

.explore-panel ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.explore-panel ul.categories {
  flex-direction: column;
  gap: 8px;
}

.explore-panel ul.tags {
  flex-direction: row;
  flex-wrap: wrap;
  gap: 10px;
}

.explore-panel ul.post-types {
  flex-direction: column;
  gap: 12px;
}

.explore-panel ul.post-types li {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.explore-panel ul.post-types li a {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8px;
  padding: 6px 8px;
  margin: -6px -8px;
  border-radius: var(--radius-sm, 8px);
  transition: background-color 0.2s ease, color 0.2s ease;
}

.explore-panel ul.post-types li a:hover {
  text-decoration: none;
  background-color: var(--accent-soft);
}

.explore-panel ul.post-types li a:hover .post-type-icon,
.explore-panel ul.post-types li a:hover .post-type-label {
  color: var(--accent);
}

.explore-panel ul.post-types .post-type-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
  color: var(--text-secondary);
  transition: color 0.2s ease;
}

.explore-panel ul.post-types .post-type-text {
  display: flex;
  flex-direction: column;
  gap: 2px;
  background: none;
  padding: 0;
  border-radius: 0;
}

.explore-panel ul.post-types .post-type-label {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  background: none;
  padding: 0;
  border-radius: 0;
  font-size: 14px;
  color: var(--text-secondary);
}

.explore-panel ul.post-types li small {
  font-size: 0.75rem;
  color: var(--text-tertiary, #888);
  line-height: 1.4;
}

.explore-panel li a {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  color: var(--text-secondary);
  padding: 6px 0;
  transition: color 0.2s ease;
  font-size: 14px;
}

.explore-panel li a:hover {
  color: var(--accent);
}

.explore-panel li span {
  padding: 2px 6px;
  font-size: 0.68rem;
  background: var(--accent-soft);
  border-radius: 999px;
  color: var(--accent);
}

@media (max-width: 900px) {
  .explore-panel {
    top: 24px;
  }
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
</style>
