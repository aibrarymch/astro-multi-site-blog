---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { resolveImage } from '../utils/images';

interface LinkItem {
  label: string;
  url: string;
  icon?: 'external' | 'github' | 'play' | 'download';
}

interface Props {
  title: string;
  thumbnail: ImageMetadata | string;
  description?: string;
  links: LinkItem[];
  imageFit?: 'cover' | 'contain';
}

const { title, thumbnail, description, links, imageFit = 'cover' } = Astro.props;

const { resolvedSrc: resolvedThumbnail, isRemote } = await resolveImage(thumbnail);

const getIcon = (icon?: string) => {
  switch (icon) {
    case 'github':
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`;
    case 'play':
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>`;
    case 'download':
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>`;
  }
};
---
<div class="work-card">
  <div class={`thumbnail fit-${imageFit}`}>
    {isRemote ? (
      <Image src={resolvedThumbnail as string} alt={title} inferSize />
    ) : (
      <Image src={resolvedThumbnail as ImageMetadata} alt={title} />
    )}
  </div>
  <div class="content">
    <h3 class="title">{title}</h3>
    {description && <p class="description">{description}</p>}
    <div class="links">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="link-button"
        >
          <span class="icon" set:html={getIcon(link.icon)} />
          <span>{link.label}</span>
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .work-card {
    margin: 28px 0;
    display: grid;
    grid-template-columns: minmax(0, 2fr) minmax(0, 3fr);
    gap: 18px;
    align-items: stretch;
    min-height: 200px;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    background: var(--bg-card);
    overflow: hidden;
  }

  .thumbnail {
    position: relative;
    background: var(--bg-thumb);
    overflow: hidden;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    display: block;
    object-position: center;
  }

  .fit-cover img {
    object-fit: cover;
  }

  .fit-contain img {
    object-fit: contain;
  }

  .content {
    padding: 18px 18px 18px 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.4;
  }

  .description {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: auto;
  }

  .link-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 12px 16px;
    border-radius: var(--radius-sm);
    background: var(--accent-soft);
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.18s ease;
  }

  .link-button:hover {
    background: var(--accent-soft-hover);
    text-decoration: none;
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .icon :global(svg) {
    display: block;
  }

  @media (max-width: 720px) {
    .work-card {
      grid-template-columns: 1fr;
    }

    .thumbnail {
      aspect-ratio: 16 / 9;
    }

    .content {
      padding: 0 18px 18px 18px;
    }

    .title {
      font-size: 1rem;
    }

    .link-button {
      padding: 10px 14px;
      font-size: 0.85rem;
    }
  }
</style>
