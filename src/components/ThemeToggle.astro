---
// ThemeToggle component - Switches between light and dark themes
// Initial value follows system preference, then toggles between light/dark
---

<button
  id="theme-toggle"
  type="button"
  aria-label="テーマを切り替え"
  title="テーマを切り替え"
>
  <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<script>
  class ThemeToggle {
    private button: HTMLButtonElement;

    constructor() {
      this.button = document.getElementById('theme-toggle') as HTMLButtonElement;
      if (this.button) {
        this.init();
      }
    }

    private init(): void {
      this.updateIcon();
      this.button.addEventListener('click', () => this.toggle());

      // Watch for system theme changes (only when no preference is stored)
      window.matchMedia('(prefers-color-scheme: dark)')
        .addEventListener('change', () => {
          if (!localStorage.getItem('theme')) {
            this.applyTheme();
            this.updateIcon();
          }
        });
    }

    private getEffectiveTheme(): 'light' | 'dark' {
      const stored = localStorage.getItem('theme');
      if (stored === 'light' || stored === 'dark') return stored;
      // Initial: follow system preference
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }

    private toggle(): void {
      // Toggle between light and dark only
      const current = this.getEffectiveTheme();
      const next = current === 'light' ? 'dark' : 'light';
      localStorage.setItem('theme', next);
      this.applyTheme();
      this.updateIcon();
    }

    private applyTheme(): void {
      const effective = this.getEffectiveTheme();
      document.documentElement.setAttribute('data-theme', effective);
      document.documentElement.style.colorScheme = effective;
    }

    private updateIcon(): void {
      const effective = this.getEffectiveTheme();
      this.button.classList.toggle('is-dark', effective === 'dark');
    }
  }

  // Initialize on page load and after Astro page transitions
  function initThemeToggle() {
    new ThemeToggle();
  }

  document.addEventListener('DOMContentLoaded', initThemeToggle);
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>

<style>
  #theme-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    padding: 0;
    border: none;
    border-radius: var(--radius-sm);
    background: transparent;
    color: var(--text-primary);
    cursor: pointer;
    transition: background-color 0.2s;
  }

  #theme-toggle:hover {
    background-color: var(--accent-soft);
  }

  #theme-toggle .icon-sun,
  #theme-toggle .icon-moon {
    width: 20px;
    height: 20px;
  }

  #theme-toggle .icon-sun {
    display: block;
  }

  #theme-toggle .icon-moon {
    display: none;
  }

  #theme-toggle.is-dark .icon-sun {
    display: none;
  }

  #theme-toggle.is-dark .icon-moon {
    display: block;
  }
</style>
