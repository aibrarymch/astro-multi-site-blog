---
import type { CollectionEntry } from 'astro:content';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { formatDate } from '../utils/date';
import { getPostDetailUrl, getScrapDetailUrl } from '../utils/siteConfig';
import { resolveImage } from '../utils/images';
import CategoryThumbnail from './CategoryThumbnail.astro';

interface Props {
  entry: CollectionEntry<'blog'> | CollectionEntry<'scraps'>;
  type: 'blog' | 'scrap';
}

const { entry, type } = Astro.props;
const { data } = entry;

const url = type === 'blog'
  ? getPostDetailUrl(entry.slug, data)
  : getScrapDetailUrl(entry.slug, data);

const isScrap = type === 'scrap';
const closed = isScrap && 'closed' in data ? data.closed : false;

// 個別サムネイルが設定されている場合のみ画像を解決
const hasThumbnail = data.thumbnail !== undefined;
let resolvedSrc: string | ImageMetadata | undefined;
let isRemote = false;

if (hasThumbnail) {
  const result = await resolveImage(data.thumbnail!);
  resolvedSrc = result.resolvedSrc;
  isRemote = result.isRemote;
}
---
<a class="post-card" href={url}>
  {isScrap && (
    closed
      ? <span class="type-label">作業メモ</span>
      : <span class="type-label in-progress">作業中</span>
  )}
  <div class="thumb">
    {hasThumbnail ? (
      isRemote ? (
        <Image src={resolvedSrc as string} alt={`${data.title} のサムネイル`} width={160} height={160} loading="lazy" />
      ) : (
        <Image src={resolvedSrc as ImageMetadata} alt={`${data.title} のサムネイル`} width={160} height={160} loading="lazy" />
      )
    ) : (
      <CategoryThumbnail category={data.category} alt={`${data.title} のサムネイル`} width="100%" height="100%" />
    )}
    {data.ageRestricted && (
      <span class="age-badge">R18</span>
    )}
  </div>
  <div class="body">
    <div class="type-row">
      <span class="category">{data.category}</span>
    </div>
    <h2 class="title">{data.title}</h2>
    <p class="excerpt">{data.excerpt}</p>
    <div class="meta">
      <span>{isScrap ? '開始' : '公開'}: {formatDate(data.publishedAt)}</span>
      <span>更新: {formatDate(data.updatedAt)}</span>
    </div>
  </div>
</a>

<style>
.post-card {
  position: relative;
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 20px;
  padding: 20px;
  border-radius: var(--radius-lg);
  border: 1px solid var(--border);
  background: var(--bg-card);
  box-shadow: var(--shadow-soft);
  transition: box-shadow 0.24s ease, border-color 0.24s ease;
  text-decoration: none;
  color: inherit;
}

.post-card:hover {
  box-shadow: 0 16px 40px var(--shadow-hover);
  border-color: var(--accent);
}

.post-card .thumb {
  position: relative;
  display: block;
  overflow: hidden;
  border-radius: var(--radius-md);
  background: var(--bg-thumb);
  width: 160px;
  height: 160px;
}
@media (max-width: 600px) {
  .post-card .thumb {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
  }
}

.post-card .thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.post-card .age-badge {
  position: absolute;
  bottom: 8px;
  right: 8px;
  background: var(--bg-badge-r18);
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.65rem;
  font-weight: 700;
  letter-spacing: 0.04em;
}

.post-card .body {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.post-card .type-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.post-card .type-label {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
  font-size: 0.65rem;
  color: white;
  background: var(--accent);
  padding: 6px 12px;
  border-radius: 0 var(--radius-lg) 0 var(--radius-md);
  font-weight: 600;
  letter-spacing: 0.03em;
}

.post-card .type-label.in-progress {
  background: var(--text-secondary);
  opacity: 0.7;
}

.post-card .category {
  align-self: flex-start;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  background: var(--accent-soft);
  border-radius: 999px;
  padding: 4px 12px;
  color: var(--accent);
}

.post-card .title {
  margin: 0;
  font-size: 1.15rem;
  color: var(--text-primary);
  line-height: 1.5;
}

.post-card .excerpt {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
  line-height: 1.6;
}

.post-card .meta {
  display: flex;
  gap: 16px;
  font-size: 0.75rem;
  color: var(--text-secondary);
}

@media (min-width: 601px) {
  .post-card .body {
    flex-grow: 1;
    min-width: 0;
  }
  .post-card .title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-width: 0;
  }
  .post-card .excerpt {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .post-card .meta {
    margin-top: auto;
  }
}

@media (max-width: 600px) {
  .post-card {
    grid-template-columns: 1fr;
  }
}
</style>
